{
	"include": ["./src/**/*"],
	"compilerOptions": {
		"outDir": "lib",
		"target": "es2020",
		"lib": ["dom", "esnext"],
		"skipLibCheck": true,
		"noImplicitReturns": true,
		"noErrorTruncation": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"strict": true,
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": "."
	}
}
